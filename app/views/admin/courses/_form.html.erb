
<% if @course.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

    <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p class="input">
  <%= f.label :title, t(:title, :scope => :general) %><br />
  <%= f.text_field :title %>
</p>
<p class="input">
  <%= f.label :short_title, t(:short_title, :scope => :general) %><br />
  <%= f.text_field :short_title %>
</p>
<p class="input">
  <%= f.label :language, t(:language, :scope => :general) %><br />
  <%= f.text_field :language %>
</p>
<p class="input">
  <%= f.label :description, t(:description, :scope => :general) %><br />
  <%= f.text_area :description %>
</p>
<% if @course.publishable? %>
	<p class="select">
		<%= f.check_box :published %> <%= t(:publish, :scope => :course) %>
	</p>
<% end %>
<% if @course.deprecatable? %>
	<p class="select">
		<%= f.check_box :deprecated %> <%= t(:mark_deprecated, :scope => :course) %>
	</p>
<% end %>
<p class="submit">
  <%= f.submit t(:submit, :scope => :general) %>
</p>
