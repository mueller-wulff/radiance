    <ul>
      <% @stitch_module.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p class="input">
  <%= f.label :title, t(:title, :scope => :general) %><br />
  <%= f.text_field :title %>
</p>
<p class="input">
  <%= f.label :short_title, t(:short_title, :scope => :general) %><br />
  <%= f.text_field :short_title %>
</p>
<p class="input">
  <%= f.label :description, t(:description, :scope => :general) %><br />
  <%= f.text_area :description %>
</p>
<p class="input">
  <%= f.label :ects, t(:ects, :scope => :stitch_module) %><br />
  <%= f.text_field :ects %>
</p>
<% unless @stitch_module.new_record? %>
	<p class='select'>
		<%= f.check_box :complete %> <%= t(:complete, :scope => :stitch_module) %>?
	</p>
<% end %>
<p class="actions">
  <%= f.submit t(:submit, :scope => :general) %>
</p>
