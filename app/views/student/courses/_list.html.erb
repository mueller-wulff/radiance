<table  class="userlist">
  <thead>
    <tr>
      <td><%= t(:short_title, :scope => :general) %></td>
      <td><%= t(:title, :scope => :general) %></td>
      <td><%= t(:language, :scope => :general) %></td>
			<td>&nbsp;</td>
    </tr>
  </thead>
  <tbody>
    <% courses.each do |course| %>
      <tr>
        <td><%= link_to course.short_title, student_course_path(course) %></td>
        <td><%= course.title %></td>
        <td><%= course.language %></td>
				<td>
					<%= link_to image_tag("space.gif", :title => t(:show, :scope => :general)+" "+t(:coursebook, :scope => :student), :class => "icon-coursebook"), show_coursebook_student_course_path(course) unless is_demo_student? %>
					<%= link_to image_tag("space.gif", :title => t(:show, :scope => :general)+" "+t(:students, :scope => :student), :class => "icon-discussion"), student_students_path(:course_id  => course.id) unless is_demo_student? %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>