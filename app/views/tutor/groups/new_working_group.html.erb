<div id="main">
	<h1>New Working Group for Course Group <%= @course_group.title %></h1>
	<%= form_for(@working_group, :url => create_working_group_tutor_groups_path(:parent => @course_group)) do |f| %>
	  <% if @working_group.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@working_group.errors.count, "error") %> prohibited this group from being saved:</h2>

	      <ul>
	      <% @working_group.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <p class="input">
	    <%= f.label :title, 'Name' %><br />
	    <%= f.text_field :title %>
	  </p> 
		<p class="select">
			<%= f.label :students %>
			<ol>		
				<% @course_group.students.each do |student| %>
					<li><%= check_box_tag("working_group[student_ids][]", student.id, @working_group.students.include?(student)) %> <%= student.profile.fullname %></li>
				<% end %>
			</ol>
		</p>
	  <p class="submit"> 
	    <%= submit_tag "Submit" %>  
	  </p>  
	<% end %>
	<%= link_to 'Back', edit_tutor_group_path(@course_group) %>
</div>
<div id="aside">

</div>

