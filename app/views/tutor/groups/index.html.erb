<div id="main">
	<h1><%= t(:list_groups_for_discussion, :scope => :chat) %></h1>
	<table  class="userlist">
  	<thead>
  		<tr>
				<td><%= t(:name, :scope => :profile) %></td>
				<td><%= t(:course, :scope => :course) %></td>
				<td><%= t(:type, :scope => :general) %></td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody>
			<% @groups.each do |group| %>
			  <tr>
					<td><%= group.title %></td>
					<td><%= group.course.short_title %></td>
					<td>
						<%= group.parent_id ? t(:working_group, :scope => :group) : t(:course_group, :scope => :group) %>
					</td>
			    <td>
						<%= link_to image_tag("space.gif", :title => t(:group_discussions, :scope => :chat), :class => "icon-discussion"), discussion_tutor_group_path(group) %>
          	<%= link_to image_tag("space.gif", :title => t(:delete, :scope => :group), :class => "icon delete"), tutor_group_path(group), :confirm => t(:confirm, :scope => :group), :method => :delete %>
					</td>
			  </tr>
			<% end %>
		</tbody>
	</table>
</div>
<div id="aside">

</div>

