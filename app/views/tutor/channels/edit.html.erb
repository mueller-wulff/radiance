<div id="main">
	<h1>Edit Discussion</h1>
  <%= form_for(@channel, :url => tutor_group_channel_path(@channel), :html => { :method => "put" }) do |c| %> 
    <%= errors_for(@channel) %>

  	<p class="input">
			<%= label :name, "Name" %>  
      <%= c.text_field :name %>  
      <%= c.hidden_field :group_id %>
    </p>  

  	<p class="input">
      <%= label :closed, "Closed?" %>
      <span class="checkbox"> <%= c.check_box :closed, class:"checkbox"%> Discussion is closed </span>
		</p>  

		<p class="submit"> 
		  <%= submit_tag "Update" %>  
		</p>  
	<% end %> 
	<%= link_to 'Back to group', edit_tutor_group_path(@channel.group)%>

</div>
<div id="aside">

</div>

