<div id="main">
  <h1><%= t(:new, :scope => :general) %> <%= t(:deadline, :scope => :course) %> <%= t(:for, :scope => :general) %> <%= @page.stitch_unit.title %></h1>
  <%= form_for(@deadline, :url => tutor_course_deadlines_path(@course)) do |f| %>
    <p class="checkbox">
			<%= label :due_date, t(:deadline, :scope => :course) %><br />
			<%= datetime_select "deadline", :due_date, :default => @group_deadline.due_date %><div id="error_explanation"></div>
		</p>
		<%= hidden_field_tag :page, @page.id %>
		<%= hidden_field_tag :group_id, @group.id %>
		<%= hidden_field_tag :group_deadline, @group_deadline.id %>
		<%= hidden_field_tag :group_due_date, @group_deadline.due_date %>
		<p class="submit"> 
		  <%= submit_tag t(:submit, :scope => :general) %>  
		</p>
  <% end %>
  <%= link_to t(:back, :scope => :general), tutor_course_deadlines_path(@course) %>

</div>
<div id="aside">

</div>
<script type="text/javascript">
	$(document).ready(function(){
    Stitched.loadCheckDueDate();
  });
</script>