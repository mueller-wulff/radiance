<div id="main">
  <h1>New Deadline for <%= @page.stitch_unit.title %></h1>
  <%= form_for(@deadline, :url => tutor_course_deadlines_path(@course)) do |f| %>
    <p class="checkbox">
			<%= label :due_date, "Deadline" %><br />
			<%= datetime_select "deadline", :due_date, :default => @group_deadline.due_date %><div id="error_explanation"></div>
		</p>
		<%= hidden_field_tag :page, @page.id %>
		<%= hidden_field_tag :group_id, @group.id %>
		<%= hidden_field_tag :group_deadline, @group_deadline.id %>
		<%= hidden_field_tag :group_due_date, @group_deadline.due_date %>
		<p class="submit"> 
		  <%= submit_tag "Submit" %>  
		</p>
  <% end %>
  <%= link_to 'Back', tutor_course_deadlines_path(@course) %>

</div>
<div id="aside">

</div>
<script type="text/javascript">
	$(document).ready(function(){
    Stitched.loadCheckDueDate();
  });
</script>