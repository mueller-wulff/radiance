<div id="main">
  <h1 id="page_title"><%= @course.title %></h1>
  
  <h2><%= t(:overview, :scope => :tutor) %></h2>
    <table  class="userlist" id="module_list">
      <thead>
        <tr id="thead">
          <td>&nbsp;</td>
					<td>&nbsp;</td>
        </tr>
      </thead>
      <tbody>
      	<tr> 
        	<td><%= link_to t(:students, :scope => :student), tutor_course_students_path(@course) %></td>
					<td><%= t(:overview_student, :scope => :tutor) %></td>
        </tr>
				<tr> 
        	<td><%= link_to t(:assignments, :scope => :page), assignment_tutor_course_path(@course) %></td>
					<td><%= t(:overview_assignment) %></td>
        </tr>
				<tr> 
        	<td><%= link_to t(:delivered_assignments, :scope => :tutor), tutor_course_answer_logs_path(@course) %> (<%= @answer_log_size %>)</td>
					<td><%= t(:overview_delivered, :scope => :tutor) %></td>
        </tr>
				<tr> 
        	<td><%= link_to t(:deadlines, :scope => :course), tutor_course_deadlines_path(@course) %></td>
					<td><%= t(:overview_deadline, :scope => :tutor) %></td>
        </tr>
				<tr> 
        	<td><%= link_to t(:assessment, :scope => :student), assessment_tutor_course_path(@course) %></td>
					<td><%= t(:overview_assessment, :scope => :tutor) %></td>
        </tr>
				<% unless is_demo_tutor? %>
					<tr>
						<td><%= link_to t(:messaging, :scope => :navigation), chat_messages_path %></td>
						<td><%= t(:overview_message, :scope => :tutor) %></td>
					</tr>
				<% end %>
				<tr> 
        	<td><%= link_to t(:course_content, :scope => :course), tutor_course_path(@course) %></td>
					<td><%= t(:overview_course, :scope => :tutor) %> 
						<br />
						<strong><%= t(:overview_advice, :scope => :tutor) %></strong>						
					</td>
        </tr>
      </tbody>
    </table>		
	<%= link_to t(:back, :scope => :general), tutor_courses_path %>
</div>
<div id="aside">

</div>