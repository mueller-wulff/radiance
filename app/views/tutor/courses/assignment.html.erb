<div id="main">
	<h1>
		<%= t(:assignments, :scope => :page) %> <%= t(:for, :scope => :general) %> <%= t(:course, :scope => :course) %> <%= @course.short_title %>
	</h1>
	<table  class="userlist">
		<thead>
			<tr>
	      <td><%= t(:title, :scope => :general) %></td>
	      <td>Score</td>
	      <td><%= t(:weight, :scope => :stitch_unit) %></td>
	    </tr>
		<% @stitch_modules.each do |stitch_module| %>
			<% if stitch_module.has_assignment_page? %>				
					<tr>
						<td><strong><%= stitch_module.short_title %></strong></td>
						<td>&nbsp;</td>
						<td>&nbsp;</td>
					</tr>				    
				  </thead>
				  <tbody>
				    <% stitch_module.stitch_units.each do |stitch_unit| %>
							<% if stitch_unit.has_assignment_page? %>
				      	<tr>
					        <td><%= link_to stitch_unit.title, tutor_stitch_unit_page_path(stitch_unit, stitch_unit.assignment_page) %></td>
					        <td><%= stitch_unit.assignment_page.total_page_score(current_user.role) %></td>
					        <td><%= stitch_unit.weight %>%</td>
					      </tr>
							<% end %>
				    <% end %>
				  </tbody>
			<% end %>					
		<% end %>	
		</table>
	<%= link_to t(:back, :scope => :general), overview_tutor_course_path(@course) %>
</div>
<div id="aside">

</div>