<p class="input">
  <% unless e.txt == "" %>
    <label for="Input"><%=raw e.txt.gsub("\n","<br />") %></label>
  <% end %>
	<% if @student && @student.give_answer?(@student, e) %>
		<br />
		<%= show_answer(e, @student).txt %>
		<p>
			<label><%= t(:achievement, :scope => :tutor) %>: <%=text_field_tag "achievement-element", show_answer(e, @student).score, {:readonly => true, :class => "achievement" }%></label>
		</p>		
	<% else %>
  	<%= text_field_tag :dummy  %>		
	<% end %>
</p>
<p>
	<label><%= t(:score, :scope => :tutor) %>: <%=text_field_tag "score-element", show_score(e, current_user.role), {:readonly => true, :class => "score" } %></label>
</p>
