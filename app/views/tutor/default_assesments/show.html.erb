<div id="main">

  <h1><%= t(:default, :scope => :default_assessment) %> <%= t(:assessment, :scope => :student) %> <%= t(:of, :scope => :general) %> <%= t(:course, :scope => :course) %> <%= @course.short_title %></h1>
	<table  class="userlist">
	  <thead>
	    <tr>
	      <td><%= t(:mark, :scope => :default_assessment) %></td>
	      <td><%= t(:name, :scope => :profile) %></td>
	      <td><%= t(:lower_treshold, :scope => :default_assessment) %></td>
				<td><%= t(:upper_treshold, :scope => :default_assessment) %></td>
	    </tr>
	  </thead>
	  <tbody>
	    <% @default_assesments.each do |da| %>
	      <tr>
	        <td><%= da.mark %></td>
	        <td><%= da.name %></td>
	        <td><%= da.lower_treshold %></td>
					<td><%= da.upper_treshold %>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<%= link_to t(:back, :scope => :general), :back %>
	
</div>
<div id="aside">

</div>
