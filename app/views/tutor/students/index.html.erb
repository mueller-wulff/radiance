<div id="main">
	<h1>Managing Students</h1>

	<table  class="userlist">
  	<thead>
  		<tr>
				<td>Avatar</td>
        <td>E-Mail</td>
				<td>Login</td>
				<td>Name</td>
				<td>Lastname</td>
        <td>Active?</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody>
			<% @course_groups.each do |c_group| %>
				<tr>
					<td><strong><%= c_group.title %></strong></td>
					<td><%= link_to 'Enroll Student', new_tutor_group_student_path(c_group) %></td>
					<td></td>
					<td></td>
					<td></td>
					<td></td>
					<td>
						<%= link_to image_tag("space.gif", :title => "manage Working Groups", :class => "icon edit"), edit_tutor_group_path(c_group) %>
					</td>
				</tr>
				<% c_group.all_students.each do |student| %>
			  	<tr>
						<td><%= image_tag avatar_url(student) %></td>
						<td><%= student.profile.email %></td>
						<td><%= student.profile.login %></td>
						<td><%= student.profile.name %></td>
						<td><%= student.profile.lastname %></td>
						<td><%= student.activated ? "working" : "inactive" %></td>
				    <td>
	          	<%= link_to image_tag("space.gif", :title => "Coursebook", :class => "icon-coursebook"), tutor_group_student_path(c_group, student) %>
							<%= link_to image_tag("space.gif", :title => "remove Student", :class => "icon delete"), tutor_student_path(student, :course_id => @course), :method => :delete if student.deletable? %>
						</td>
				  </tr>
				<% end %>				
			<% end %>
			<tr>
				<td></td>
				<td><%= link_to "New Course Group", new_tutor_group_path(:course => @course) %></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
	</table>
	<%= link_to 'Back', overview_tutor_course_path(@course) %>
</div>
<div id="aside">

</div>
